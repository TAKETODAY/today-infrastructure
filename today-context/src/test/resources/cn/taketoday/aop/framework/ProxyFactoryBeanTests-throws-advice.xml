<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "https://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!--
	Tests for throws advice.
	$Id: throwsAdvice.xml,v 1.6 2006/08/20 19:08:40 jhoeller Exp $
-->

<beans>

	<!-- Simple target -->
	<bean id="target" class="cn.taketoday.aop.framework.Echo"/>

	<bean id="nopInterceptor" class="cn.taketoday.aop.testfixture.interceptor.NopInterceptor"/>

	<bean id="countingBeforeAdvice" class="cn.taketoday.aop.testfixture.advice.CountingBeforeAdvice" />

	<bean id="throwsAdvice" class="cn.taketoday.aop.testfixture.advice.MyThrowsHandler"/>

	<bean id="throwsAdvised" class="cn.taketoday.aop.framework.ProxyFactoryBean">
			<property name="interceptorNames">
				<value>countingBeforeAdvice,nopInterceptor,throwsAdvice,target</value>
			</property>
	</bean>

</beans>
