<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "https://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<bean id="server" class="cn.taketoday.jmx.support.MBeanServerFactoryBean"/>

	<bean id="exporter" class="cn.taketoday.jmx.export.MBeanExporter">
		<property name="server" ref="server"/>
		<property name="autodetect" value="true"/>
		<property name="excludedBeans" value="connector"/>
	</bean>

	<bean name="spring:mbean=true" class="cn.taketoday.jmx.export.TestDynamicMBean"/>

	<bean name="spring:mbean2=true" class="cn.taketoday.jmx.export.TestDynamicMBean"/>

	<bean name="spring:mbean3=true" class="cn.taketoday.jmx.export.TestDynamicMBean"/>

	<bean id="toBeIgnored" class="javax.management.DynamicMBean" abstract="true"/>

	<bean id="toBeIgnoredToo" class="javax.management.DynamicMBean" abstract="true" lazy-init="true"/>

</beans>
