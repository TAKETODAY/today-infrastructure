      <set>
        <bean class="cn.taketoday.cache.concurrent.ConcurrentMapCacheFactoryBean">
          <property name="name" value="testCache" />
        </bean>
        <bean class="cn.taketoday.cache.concurrent.ConcurrentMapCacheFactoryBean">
          <property name="name" value="primary" />
        </bean>
        <bean class="cn.taketoday.cache.concurrent.ConcurrentMapCacheFactoryBean">
          <property name="name" value="secondary" />
