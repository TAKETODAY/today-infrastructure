<configuration>
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%property{LOG_FILE} [%t] ${PID:-????} %c{1}: %m%n BOOTBOOT</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <infra-profile name="profile">
      <appender-ref ref="CONSOLE" />
    </infra-profile>
  </root>
</configuration>
