<binding>
  <mapping name="flights" class="cn.taketoday.oxm.jibx.Flights">
    <namespace uri="http://samples.springframework.org/flight" default="elements" />
    <collection field="flightList">
      <structure map-as="cn.taketoday.oxm.jibx.FlightType" />
    </collection>
  </mapping>
  <mapping name="flight" class="cn.taketoday.oxm.jibx.FlightType">
    <namespace uri="http://samples.springframework.org/flight" default="elements" />
    <value name="airline" field="airline" usage="optional" />
    <value name="number" field="number" usage="required" />
  </mapping>
</binding>
